{
  "elements": [
    {
      "type": "ValidationTextBox",
      "name": "AuthToken",
      "caption": "AuthToken (Bearer)",
      "width": "600px"
    },
    {
      "type": "CheckBox",
      "name": "AllowNoAuth",
      "caption": "AllowNoAuth (unsicher, nur LAN-Test!)"
    },
    {
      "type": "ValidationTextBox",
      "name": "WebHookPath",
      "caption": "WebHookPath (ohne /hook/)",
      "width": "300px"
    },
    {
      "type": "CheckBox",
      "name": "DebugLog",
      "caption": "DebugLog"
    },

    {
      "type": "Label",
      "caption": "-------------------------------- UI --------------------------------"
    },

    {
      "type": "NumberSpinner",
      "name": "UiRootID",
      "caption": "RootID (0 = Root)",
      "minimum": 0,
      "maximum": 999999,
      "value": 0
    },
    {
      "type": "ValidationTextBox",
      "name": "UiFilter",
      "caption": "Filter (Name oder Pfad enthält...)",
      "width": "300px"
    },
    {
      "type": "NumberSpinner",
      "name": "UiPageSize",
      "caption": "Max Einträge",
      "minimum": 1,
      "maximum": 500,
      "value": 50
    },
    {
      "type": "RowLayout",
      "items": [
        {
          "type": "Button",
          "caption": "Ping",
          "onClick": "SCB_UiPing($id);"
        },
        {
          "type": "Button",
          "caption": "Liste laden",
          "onClick": "SCB_UiList($id);"
        },
        {
          "type": "Button",
          "caption": "Hook-URL anzeigen",
          "onClick": "SCB_UiShowHook($id);"
        }
      ]
    },
    {
      "type": "List",
      "name": "VarList",
      "caption": "Variablen",
      "rowCount": 15,
      "add": false,
      "delete": false,
      "columns": [
        { "label": "ID", "name": "var_id", "width": "90px" },
        { "label": "Name", "name": "name", "width": "220px" },
        { "label": "Pfad", "name": "path", "width": "520px" },
        { "label": "Typ", "name": "type_text", "width": "70px" },
        { "label": "Profil", "name": "profile", "width": "140px" },
        { "label": "Wert", "name": "value_text", "width": "200px" }
      ],
      "values": []
    },
    {
      "type": "Label",
      "caption": "Status:"
    },
    {
      "type": "Label",
      "name": "LastResultLabel",
      "caption": ""
    }
  ],
  "actions": []
}
